<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.plantopia.dao.IStoreCommentDao">
	<select id="getCommentByProduct" resultType="com.plantopia.dto.StoreCommentDto">
		select * from Store_Comment 
		 where p_idx= #{p_idx}
		 order by scom_idx desc
	</select>
	
	<select id="getCommentByIdx" resultType="com.plantopia.dto.StoreCommentDto">
		select * from Store_Comment 
		 where scom_idx = #{scom_idx}
	</select>
	
	<insert id="insertStoreComment">
	<!-- user_num추가하기 -->
		insert into Store_Comment(scom_contents,p_idx) 
		 values(#{scom_contents},#{p_idx})
	</insert>
	
	<update id="updateStoreComment">
		update Store_Comment 
		 set scom_contents=#{scom_contents}
		 where scom_idx = #{scom_idx}
	</update>
	
	<delete id="deleteStoreComment">
		delete from Store_Comment
			where scom_idx = #{scom_idx}
	</delete>
	
</mapper>