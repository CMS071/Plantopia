<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.plantopia.dao.IUserDao">
	<select id="selectUser" resultType="com.plantopia.dto.UserDto">
		<![CDATA[
			select * from User order by user_num desc
		]]>
	</select>
	
	<select id="selectUserDetail" resultType="com.plantopia.dto.UserDto">
		<![CDATA[
			select * from User where user_num=#{user_num} 
		]]>
	</select>
	
	<insert id="insertUser"
        parameterType="com.plantopia.dto.UserDto"
        useGeneratedKeys="true"
        keyProperty="user_num">
		<![CDATA[
			insert into User(user_id, user_passwd, user_name, user_nickname, roadAddrPart1, addrDetail, zipNo, user_email, user_tel)
			 values(#{user_id}, #{user_passwd}, #{user_name}, #{user_nickname}, #{roadAddrPart1}, #{addrDetail}, #{zipNo}, #{user_email}, #{user_tel})
		]]>
	</insert>
	
	<update id="updateUser" parameterType="com.plantopia.dto.UserDto">
	    <![CDATA[
	        update User 
	        set 
	            user_passwd = #{user_passwd},
	            user_nickname = #{user_nickname},
	            roadAddrPart1 = #{roadAddrPart1},
	            addrDetail = #{addrDetail},
	            zipNo = #{zipNo},
	            user_email = #{user_email},
	            user_tel = #{user_tel}
	        where user_num = #{user_num}
	    ]]>
	</update>
	
	<delete id="deleteUser" parameterType="int">
		<![CDATA[
			delete from User where user_num=#{user_num}
		]]>
	</delete>
	
	<select id="findByUserId" parameterType="String" resultType="com.plantopia.dto.UserDto">
		<![CDATA[
    		select * from User where user_id=#{user_id}
    	]]>
	</select>
	
	<select id="findByUserNickname" parameterType="String" resultType="com.plantopia.dto.UserDto">
		<![CDATA[
    		select * from User where user_nickname=#{user_nickname}
    	]]>
	</select>
	
	<select id="findByUserEmail" parameterType="String" resultType="com.plantopia.dto.UserDto">
		<![CDATA[
    		select * from User where user_email=#{user_email}
    	]]>
	</select>
</mapper>